<mvc:View   controllerName="logaligroup.SAPUI5.controller.App"
            xmlns="sap.m" 
            xmlns:mvc="sap.ui.core.mvc"
            displayBlock="true">
    <Shell >
        <App >
            <pages>                    
                <Page title="{i18n>appTitles}">
                <!-- Botón en el header usando la reutilización-->
                <headerContent>
                    <Button id="helloDialogHeader"
                            icon="sap-icon://action"
                            press=".onOpenDialogHeader"
                            class="sapUiSmallMarginEnd">
                    </Button>
                </headerContent>
                    <content>
                        <!-- Vista anidada HelloPanel-->
                        <mvc:XMLView viewName="logaligroup.SAPUI5.view.HelloPanel" />
                        <mvc:XMLView viewName="logaligroup.SAPUI5.view.InvoiceList" />
                    </content>
                </Page>                    
            </pages>
        </App>
    </Shell>
</mvc:View>